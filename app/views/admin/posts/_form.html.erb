<% if @post.errors.any? %>
<div class="alert alert-danger">
    <h5><%= t('common.errors') %></h5>
    <ul>
        <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<%= form_for [:admin, @post], html: { multipart: true } do |f| %>
<div class="form-group">
<%= f.label :title %>
<%= f.text_field :title, class: 'form-control' %>
</div>

<div class="form-group">
<%= f.label :summary %>
<%= f.text_area :summary, class: 'form-control' %>
</div>

<div class="form-group">
<%= f.label :body %>
<%= f.trix_editor :body, class: 'editor' %>
</div>

<div class="form-group">
<%= f.label :Теги %>
<%= f.text_field :all_tags, class: 'form-control' %>
</div>


<div class="form-group">
<%= f.file_field :image %>
</div>

<div class="form-group">
<%= f.file_field :image1 %>
</div>

<div class="form-group">
<%= f.file_field :image2 %>
</div>

<div class="form-group">
<%= f.file_field :image3 %>
</div>

<div class="form-group">
    <%= f.label :Категории %>
<!--<%= f.label :category_id %> -->
<%= f.collection_select :category_id, Category.order(:name), :id, :name, { include_blank: true }, class: 'form-control' %>
</div>

<div class="form-group">
<%= f.submit 'Сохранить', class: 'btn btn-primary wd' %>
<%= link_to 'Назад', :back, class: 'btn btn-outline-secondary wd' %>
</div>
<% end %>
