 <arctical class="post clearfix">
    <div class="mid2 cleardix">
    <%= image_tag post.image.url(:thumb), class: 'thumb myimg' if post.image? %>
    <small>
        <% if user_signed_in? && current_user.admin? %>
        <time>
        <%= post.created_at.to_date.strftime("%d %B, %Y") %>
        |
        <%= link_to 'Ред', edit_admin_post_path(post) %>
        |
        <%= link_to 'Уд', admin_post_path(post), method: :delete, data: { confirm: 'Вы уверены?' } %>
        </time>
        <% end %>
    </small>
    <section>  
    <h2 class="t1"><%= link_to post.title, post_path(post) %></h2>
    <h2 class="t2"><%= post.summary %></h2>
    </section>
     </div>
</arctical>

